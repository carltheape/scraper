<div class="panel-group col-xs-12 col-md-10 col-md-offset-1" role="tablist" aria-multiselectable="true">
    {{#each articles}}
        <div class="panel panel-default">
            <div class="panel-heading" role="tab">
                <h4 class="panel-title text-center">
                    <a href="{{ this.link }}" target="_blank">{{ this.title }}</a>
                </h4>
                <hr>
                <p class="text-center">
                    <button type="submit" form="hidden-form-{{ this.id }}" class="btn btn-block btn-success">
                        Save Article
                    </button>
                </p>
                <form action="/articles" method="POST" id="hidden-form-{{ this.id }}" class="hidden-xs-up">
                    <input type="hidden" name="title" value="{{ this.title }}"></input>
                    <input type="hidden" name="link" value="{{ this.link }}"></input>
                </form>
            </div>
        </div>
    {{/each}}
</div>